<?xml version="1.0" encoding="utf-8"?>
<com.vismaad.naad.custom_views.HeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/raagi_name_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:transitionName="raagi_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/shabads_count_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:text="Subtitle"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        android:textColor="@android:color/white"
        android:transitionName="raagi_shabads_count" />


</com.vismaad.naad.custom_views.HeaderView>